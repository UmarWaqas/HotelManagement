<Window x:Class="HotelManagement.AddRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Room" Height="400" Width="400" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Room Type:" HorizontalAlignment="Left" Margin="29,94,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbJobType" Height="30" HorizontalAlignment="Left" Margin="125,98,0,0" VerticalAlignment="Top" Width="203"/>
        <Label Content="Room No:" HorizontalAlignment="Left" Margin="29,36,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAllowedGuests" HorizontalAlignment="Left" Height="30" Margin="125,40,0,0" TextWrapping="Wrap" Text="Room Number" VerticalAlignment="Top" Width="203"/>
        <Label Content="Manage By:" HorizontalAlignment="Left" Margin="29,153,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbManage" HorizontalAlignment="Left" Height="30" Margin="125,157,0,0" VerticalAlignment="Top" Width="203"/>
        <Label Content="Maintain By:" HorizontalAlignment="Left" Margin="29,211,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbMaintain" HorizontalAlignment="Left" Height="30" Margin="125,215,0,0" VerticalAlignment="Top" Width="203"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="170,292,0,0" VerticalAlignment="Top" Width="80" Height="27"/>
    </Grid>
</Window>
