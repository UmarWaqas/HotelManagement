<Window x:Class="HotelManagement.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignInWindow" Height="230" Width="320" ResizeMode="CanMinimize"  WindowStartupLocation="CenterScreen" Closing="onWindowClosing">
    <Grid >
        <Label Content="User Name:" HorizontalAlignment="Left" Margin="39,14,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="23" Margin="125,18,0,0" TextWrapping="Wrap" Text="User Name" VerticalAlignment="Top" Width="144"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="39,69,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="125,73,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="144"/>
        <Button x:Name="btnSignIn" Content="Sign In" HorizontalAlignment="Left" Margin="104,126,0,0" VerticalAlignment="Top" Width="56"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="191,126,0,0" VerticalAlignment="Top" Width="56"/>



    </Grid>
</Window>
