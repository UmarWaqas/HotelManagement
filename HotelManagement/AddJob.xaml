<Window x:Name="addJob" x:Class="HotelManagement.AddJob"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Job" Height="300" Width="350" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Job Name:" HorizontalAlignment="Left" Margin="29,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtJobType" HorizontalAlignment="Left" Height="30" Margin="116,41,0,0" TextWrapping="Wrap" Text="Job Type" VerticalAlignment="Top" Width="188"/>
        <Label Content="  Salary:" HorizontalAlignment="Left" Margin="29,101,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSalary" HorizontalAlignment="Left" Height="30" Margin="116,101,0,0" TextWrapping="Wrap" Text="Salary" VerticalAlignment="Top" Width="188"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="139,176,0,0" VerticalAlignment="Top" Width="80" Height="27"/>

    </Grid>
</Window>
